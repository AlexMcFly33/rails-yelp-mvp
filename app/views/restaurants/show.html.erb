<h1>Welcome to <%= @restaurant.name %> </h1>
<h3><i> A wondefull <%= @restaurant.category %> restaurant !</i></h3>
<h5>Rating :<%= @restaurant.avg_rating  %>/5</h2>
<br>
<br>
<p><strong>Address :</strong> <%= @restaurant.address %></p>
<% if @restaurant.phone_number %>
<p><strong>Phone-number :</strong> <%= @restaurant.phone_number %></p>
<% end %>

<p><strong>Reviews :</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= '⭐️' * review.rating %></li>
  <% end %>
</ul>
<br>

<h1>Add a review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, :collection => 0..5, :prompt => "Select your rating" %>
  <%= f.submit %>
<% end %>
<br>
<%= link_to 'BACK', restaurants_path, class: "btn btn-primary" %>

